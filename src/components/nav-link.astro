---
interface Props {
    title: string;
    link: string;
}

const { title, link } = Astro.props;
---

<a
    class="group inline-flex h-10 w-max items-center justify-center rounded-md bg-white px-4 py-2 text-sm font-normal transition-colors hover:bg-blue-charcoal-300 hover:text-blue-charcoal-900 focus:bg-blue-charcoal-100 focus:text-blue-charcoal-900 focus:outline-none disabled:pointer-events-none disabled:opacity-50 data-[active]:bg-blue-charcoal-100/50 data-[state=open]:bg-blue-charcoal-100/50 dark:bg-blue-charcoal-950 dark:hover:bg-blue-charcoal-900 dark:hover:text-blue-charcoal-50 dark:focus:bg-blue-charcoal-800 dark:focus:text-blue-charcoal-50 dark:data-[active]:bg-blue-charcoal-800/50 dark:data-[state=open]:bg-blue-charcoal-800/50"
    href={link}
>
    {title}
</a>
