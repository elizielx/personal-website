---
import NavLink from "../components/nav-link.astro";

interface Props {
    footer: {
        copyright: string;
        links: {
            title: string;
            href: string;
        }[];
    };
}

const { footer } = Astro.props;
---

<div
    class="mx-auto mt-14 flex max-w-5xl items-center justify-center gap-20 overflow-hidden border-t-2 border-blue-charcoal-900 px-5 py-8 lg:justify-between xl:px-0"
>
    <a class="hidden items-center gap-2 lg:flex">
        <h2 class="hidden text-base font-light text-blue-charcoal-300 lg:block">
            {footer.copyright}
        </h2>
    </a>
    <nav class="z-10 flex max-w-max flex-1 items-center sm:justify-center lg:right-1">
        <ul
            class="group flex flex-1 list-none items-center justify-center gap-1 space-x-1 uppercase [&>*:last-child]:ml-8"
        >
            {footer.links.map((link) => <NavLink title={link.title} link={link.href} />)}
        </ul>
    </nav>
</div>
